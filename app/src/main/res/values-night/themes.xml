        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="colorOnError">@color/colorOnErrorNightmode</item>
        <item name="android:windowBackground" tools:targetApi="l">@color/black</item>
