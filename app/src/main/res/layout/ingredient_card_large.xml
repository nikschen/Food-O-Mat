<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/newIngredientButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:padding="10dp"
    app:cardBackgroundColor="?android:attr/windowBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            tools:text="Wasser" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ingredientCalories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:padding="4dp"
                android:textAlignment="center"
                tools:text="0 kcal" />

            <TextView
                android:id="@+id/ingredientWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight=".50"
                android:padding="4dp"
                android:textAlignment="center"
                tools:text="100g" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ingredientCarbohydrates"
                android:layout_height="wrap_content"
                android:layout_weight=".4"
                android:padding="4dp"
                android:textAlignment="viewStart"
                tools:text="Kohlenhydrate: 100g" />

            <TextView
                android:id="@+id/ingredientFats"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:padding="4dp"
                android:textAlignment="viewStart"
                tools:text="Fett: 100g" />

            <TextView
                android:id="@+id/ingredientProteins"
                android:layout_height="wrap_content"
                android:layout_weight=".33"
                android:padding="4dp"
                android:textAlignment="viewStart"
                tools:text="EiweiÃŸ: 100g" />

        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
